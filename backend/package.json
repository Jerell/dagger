{
  "name": "dagger-backend",
  "version": "0.1.0",
  "type": "module",
  "description": "Hono API server for Dagger network inspection",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "bun test",
    "test:costing": "bun test src/services/costing/",
    "test:services": "bun test src/services/*.test.ts",
    "build:wasm": "cd ../cli && wasm-pack build --target nodejs --out-dir ../backend/pkg",
    "build:wasm:release": "cd ../cli && wasm-pack build --release --target nodejs --out-dir ../backend/pkg"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "effect": "^3.19.13",
    "hono": "^4.11.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "bun-types": "^1.3.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
